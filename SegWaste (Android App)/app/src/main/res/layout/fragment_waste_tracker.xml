<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.WasteTrackerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="70dp">

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textOff="Monthly"
                android:textOn="Yearly"
                android:backgroundTint="@color/green_med" />

            <androidx.slidingpanelayout.widget.SlidingPaneLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green_med"
                app:cardCornerRadius="15dp"
                android:clipToPadding="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:tint="@color/black"
                    android:layout_gravity="center_vertical|left"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="March 2021"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:paddingVertical="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:tint="@color/black"
                    android:layout_gravity="center_vertical|right"/>

            </androidx.cardview.widget.CardView>

            <androidx.slidingpanelayout.widget.SlidingPaneLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green_med"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:cardCornerRadius="15dp"
                android:clipToPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp">


                    <TextView
                        android:id="@+id/num1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="5"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="40sp"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:id="@+id/label1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Plastic Bottles"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:paddingLeft="5dp"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />

                    <TextView
                        android:id="@+id/num2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="14"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="40sp"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:id="@+id/label2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Plastic Straws"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>